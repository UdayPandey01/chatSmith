{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ChatSmith Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/chatSmith-backend"
      ],
      "outFiles": [
        "${workspaceFolder}/chatSmith-backend/out/**/*.js"
      ],
    }
  ]
}
